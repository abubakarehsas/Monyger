<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relative1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainRemainderLayout"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_edittext_border"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_10"
        android:paddingLeft="@dimen/size_8"
        android:paddingRight="@dimen/size_8"
        android:layout_margin="@dimen/size_8"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/tag"
        android:text="Remainder Alert"
        android:textSize="@dimen/fontsize_15"
        android:textStyle="bold"
        android:id="@+id/txt_AddCatdsgHeading"
        android:shadowDy="5"
        android:shadowDx="5"
        android:shadowColor="@color/colorPrimaryDark"
        android:shadowRadius="10"
        android:layout_alignParentTop="true"
        />
        </RelativeLayout>
</RelativeLayout>