<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.asisdroid.moneymanager.MainActivity"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:id="@+id/expenseDateLayout"
        android:background="@color/colorAccent"
        >
        <TextView
            android:id="@+id/textCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:textColor="@color/Black"
            android:textAllCaps="true"
            android:focusable="false"
            android:padding="@dimen/size_3"
            android:gravity="center_horizontal"
            android:drawablePadding="@dimen/size_3"
            android:drawableTop="@mipmap/calendar"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/textDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:textColor="@color/Black"
            android:textAllCaps="true"
            android:padding="@dimen/size_3"
            android:drawablePadding="@dimen/size_3"
            android:gravity="center_horizontal"
            android:drawableTop="@mipmap/calendar"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/textWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Week"
            android:textColor="@color/Black"
            android:textAllCaps="true"
            android:padding="@dimen/size_3"
            android:drawablePadding="@dimen/size_3"
            android:gravity="center_horizontal"
            android:drawableTop="@mipmap/calendar"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/textMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month"
            android:textColor="@color/Black"
            android:textAllCaps="true"
            android:padding="@dimen/size_3"
            android:drawablePadding="@dimen/size_3"
            android:gravity="center_horizontal"
            android:drawableTop="@mipmap/calendar"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/textYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year"
            android:textColor="@color/Black"
            android:textAllCaps="true"
            android:padding="@dimen/size_3"
            android:drawablePadding="@dimen/size_3"
            android:gravity="center_horizontal"
            android:drawableTop="@mipmap/calendar"
            android:layout_weight="1"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/mainLayout"
        android:visibility="visible"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateLayout"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/connectorLeft"
            android:src="@mipmap/chainconnector"
            android:layout_toLeftOf="@+id/midGap"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/connectorRight"
            android:src="@mipmap/chainconnector"
            android:layout_toRightOf="@+id/midGap"
            />

        <View
            android:id="@+id/midGap"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@color/White"
            android:layout_centerHorizontal="true"
            ></View>
        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="@dimen/fontsize_15"
            android:padding="@dimen/size_6"
            android:layout_below="@+id/connectorLeft"
            android:layout_toRightOf="@+id/prevMonth"
            android:layout_toLeftOf="@+id/nextMonth"
            android:gravity="center"
            android:layout_marginLeft="@dimen/size_8"
            android:layout_marginRight="@dimen/size_8"
            android:background="@color/colorAccent"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowDx="1"
            android:shadowDy="3"
            android:shadowRadius="4"
            android:text="" />

        <ImageView
            android:id="@+id/nextMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textDate"
            android:layout_alignBottom="@+id/textDate"
            android:paddingRight="@dimen/size_25"
            android:src="@mipmap/nextblock"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/prevMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textDate"
            android:layout_alignBottom="@+id/textDate"
            android:paddingLeft="@dimen/size_25"
            android:src="@mipmap/prev"
            android:layout_alignParentLeft="true"
            />

    </RelativeLayout>

    <!--SLIDING LAYOUTS-->
    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/buttonLayout"
        android:layout_alignRight="@+id/buttonLayout"
        android:layout_above="@+id/buttonLayout"
        android:layout_below="@+id/dateLayout"
        android:gravity="bottom"
        sothree:umanoPanelHeight="@dimen/size_btnBalance"
        sothree:umanoShadowHeight="0dp"
        sothree:umanoParallaxOffset="0dp"
        sothree:umanoDragView="@+id/layoutBalance"
        sothree:umanoOverlay="true"
        sothree:umanoScrollableView = "@+id/slidingView"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:paddingBottom="25dp"
            >

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:layout_marginBottom="20dp"
                android:visibility="visible"
                 />

           <!-- <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/barchart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:layout_marginBottom="20dp"
                android:visibility="visible"
                />-->
        </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:id="@+id/layoutBalance"
    >
    <TextView
        android:id="@+id/txtBalance"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_btnBalance"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/White"
        android:text="@string/checkBalance"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/btnBalanceLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bullet"
        android:layout_alignTop="@+id/txtBalance"
        android:layout_alignBottom="@+id/txtBalance"
        android:layout_alignParentLeft="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />

    <ImageView
        android:id="@+id/btnBalanceRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bullet"
        android:layout_alignTop="@+id/txtBalance"
        android:layout_alignBottom="@+id/txtBalance"
        android:layout_alignParentRight="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />
     <!--INVISIBLE SIDE LAYOUT-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/btnBalanceRight"
             android:background="@color/LightGrey"
            android:id="@+id/separator"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/separator"
            android:id="@+id/txtInvisibleMid"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/txtInvisibleMid"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/White"
            android:text="EXPENSE DETAILS"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="@dimen/size_8"
            android:id="@+id/expenseDetailsTab"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_below="@+id/expenseDetailsTab"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/txtInvisibleMid"
            android:background="@color/White"
            android:id="@+id/expenseDetailsTabSelector"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator"
            android:gravity="center"
            android:textColor="@color/LightSeaGreen"
            android:textStyle="bold"
            android:text="INCOME DETAILS"
            android:layout_alignParentRight="true"
            android:background="@color/colorPrimaryDark"
            android:layout_toRightOf="@+id/txtInvisibleMid"
            android:padding="@dimen/size_8"
            android:id="@+id/incomeDetailsTab"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_below="@+id/incomeDetailsTab"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/txtInvisibleMid"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/incomeDetailsTabSelector"
            />

        <!--SORTING SPINNER-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLabel"
            android:textSize="@dimen/fontsize_13"
            android:paddingLeft="@dimen/size_30"
            android:paddingRight="@dimen/size_10"
            android:layout_below="@+id/expenseDetailsTabSelector"
            android:text="GROUP BY :- "
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/Test"
            android:layout_alignTop="@+id/spinnerSort"
            android:layout_alignBottom="@+id/spinnerSort"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Test"
            android:id="@+id/spinnerSort"
            android:layout_toRightOf="@id/txtLabel"
            android:layout_below="@+id/expenseDetailsTabSelector"
            android:visibility="visible"
            >
        </Spinner>
        <ExpandableListView
            android:id="@+id/slidingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/category_gradient_border_primary_withoutcorner"
            android:layout_below="@+id/spinnerSort"
            android:layout_weight="1">
        </ExpandableListView>

        <TextView
            android:id="@+id/noDataErr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_40"
            android:textAlignment="center"
             android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/fontsize_15"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:text=""
            />
</RelativeLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:id="@+id/buttonLayout"
    >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottomLayout"
     >
    <TextView
        android:id="@+id/textCredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="@dimen/fontsize_15"
        android:padding="@dimen/size_10"
        android:layout_weight="1"
        android:textColor="@color/DarkGrey"
        android:drawableBottom="@mipmap/moneycredit"
        android:gravity="center_horizontal"
        android:text="@string/addcredittext" />

    <TextView
        android:id="@+id/textDebit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="@dimen/fontsize_15"
        android:layout_weight="1"
        android:textColor="@color/DarkGrey"
        android:gravity="center_horizontal"
        android:drawableBottom="@mipmap/moneydebit"
        android:padding="@dimen/size_10"
        android:text="@string/adddebittext" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:id="@+id/bottomLayoutMin"
                >
                <TextView
                    android:id="@+id/textCreditMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="@dimen/fontsize_13"
                    android:padding="@dimen/size_6"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/calculator_onlyborder_gradient"
                    android:gravity="center_horizontal"
                    android:text="@string/addcredittext" />

                <TextView
                    android:id="@+id/textDebitMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="@dimen/fontsize_13"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/calculator_onlyborder_gradient"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/size_6"
                    android:text="@string/adddebittext" />
            </LinearLayout></LinearLayout>

   <!-- <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/fabdebit"
     eight="90dp"
        android:src="@mipmap/moneydebit"
       android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#0Dffffff"
        />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/fabcredit"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:src="@mipmap/moneycredit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#0Dffffff"
        />-->
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/subLayout"
        android:visibility="gone"
        >
       <!-- <fragment
            android:id="@+id/AddAccountFragment"
            android:name="com.asisdroid.moneymanager.AddAccFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            />-->
    </RelativeLayout>
</RelativeLayout>
