            android:id="@+id/txt_expenseAllCatgHead"
            android:shadowDy="5"
            android:shadowDx="5"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowRadius="10"
            android:layout_alignParentTop="true"
            />
        <EditText
            android:id="@+id/searchAllCategoryExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_expenseAllCatgHead"
            android:maxLength="10"
            android:hint="Search your category name"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/size_3"
            android:drawableLeft="@mipmap/search"
            android:drawablePadding="@dimen/size_6"
            />

        <!--NO CATEGORIES FOUND FOR THE SEARCH MESSAGE-->
        <TextView
            android:id="@+id/txtErrNocatg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchAllCategoryExpense"
            android:padding="@dimen/size_25"
            android:text="No categories found for your search. Please, add your own categories."
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic"
            android:gravity="center"
            android:visibility="invisible"
            />
        <ScrollView
