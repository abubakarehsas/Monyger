<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollViewAddAcct"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   tools:context="com.asisdroid.moneymanager.AddAccFragment"
    android:background="@color/White"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/AccTypeLayout"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/connectorLeft"
            android:src="@mipmap/chainconnector"
            android:layout_toLeftOf="@+id/midGap"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/connectorRight"
            android:src="@mipmap/chainconnector"
            android:layout_toRightOf="@+id/midGap"
            />

        <View
            android:id="@+id/midGap"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@color/White"
            android:layout_centerHorizontal="true"
            ></View>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optChoice"
            android:gravity="center"
            android:layout_below="@+id/connectorRight"
            android:background="@color/colorAccent"
           ></Spinner>
        <ImageView
            android:id="@+id/nextMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/optChoice"
            android:layout_alignBottom="@+id/optChoice"
            android:paddingRight="@dimen/size_10"
            android:src="@mipmap/dropdown"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/prevMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/optChoice"
            android:layout_alignBottom="@+id/optChoice"
            android:paddingLeft="@dimen/size_10"
            android:src="@mipmap/dropdown"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>


    <EditText
        android:id="@+id/edtxtAmount"
        android:layout_below="@+id/AccTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_toLeftOf="@+id/calculatorAddAccnt"
        android:textColor="@color/colorPrimaryDark"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_10"
        android:paddingLeft="@dimen/fontsize_20"
        android:paddingRight="@dimen/size_3"
        android:layout_marginTop="@dimen/size_8"
        android:hint="Amount in Rs."
        android:drawableLeft="@mipmap/rupeeicondrawable"
        android:drawablePadding="@dimen/size_8"
        android:layout_marginBottom="@dimen/size_8"
        android:maxLength="8"
        android:layout_marginLeft="@dimen/fontsize_20"
        android:layout_marginRight="@dimen/size_6"
        android:layout_alignParentLeft="true"
        android:background="@drawable/gradient_edittext_border"
        android:drawableRight="@mipmap/cancel"
        android:inputType="number"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/errAmount"
        android:layout_below="@+id/edtxtAmount"
        android:layout_alignLeft="@+id/edtxtAmount"
        android:textColor="@color/Red"
        android:text="Please, enter the amount!"
        android:textStyle="italic"
        android:textSize="@dimen/fontsize_13"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/calculatorAddAccnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AccTypeLayout"
        android:src="@mipmap/calculator"
        android:layout_marginRight="@dimen/fontsize_20"
        android:layout_alignTop="@+id/edtxtAmount"
        android:layout_alignBottom="@+id/edtxtAmount"
        android:layout_alignParentRight="true"
         />
    <EditText
        android:id="@+id/edtxtDate"
        android:focusable="false"
        android:inputType="none"
        android:layout_below="@+id/errAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="@color/colorPrimaryDark"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_10"
        android:paddingLeft="@dimen/fontsize_20"
        android:paddingRight="@dimen/size_3"
        android:layout_marginTop="@dimen/size_8"
        android:hint="Date Of Transaction"
        android:drawableLeft="@mipmap/calendardrawable"
        android:drawablePadding="@dimen/size_8"
        android:layout_marginBottom="@dimen/size_8"
        android:layout_marginLeft="@dimen/fontsize_20"
        android:layout_marginRight="@dimen/fontsize_20"
        android:background="@drawable/gradient_edittext_border"
        />

    <EditText
        android:id="@+id/edtxtNotes"
        android:layout_below="@+id/edtxtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textStyle="italic"
        android:textColor="@color/colorPrimaryDark"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_10"
        android:paddingLeft="@dimen/fontsize_20"
        android:paddingRight="@dimen/size_3"
        android:maxLength="100"
        android:layout_marginTop="@dimen/size_8"
        android:hint="Short Notes ( If needed )"
        android:drawableLeft="@mipmap/notesdrawable"
        android:drawablePadding="@dimen/size_8"
        android:layout_marginBottom="@dimen/size_8"
        android:layout_marginLeft="@dimen/fontsize_20"
        android:layout_marginRight="@dimen/fontsize_20"
        android:background="@drawable/gradient_edittext_border"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnTypeOfPayment"
        android:layout_below="@+id/edtxtNotes"
        android:textStyle="italic"
        android:paddingLeft="@dimen/size_8"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginBottom="@dimen/size_8"
        android:layout_marginLeft="@dimen/fontsize_20"
        android:layout_marginRight="@dimen/fontsize_20"
        android:background="@drawable/gradient_edittext_border"
        ></Spinner>

    <!--INCOME CATEGORY TABLE-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tableCategoryIncome"
        android:layout_below="@+id/spnTypeOfPayment"
        android:background="@drawable/gradient_edittext_border"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_10"
        android:paddingLeft="@dimen/size_8"
        android:paddingRight="@dimen/size_8"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginBottom="@dimen/size_8"
        android:layout_marginLeft="@dimen/fontsize_20"
        android:layout_marginRight="@dimen/fontsize_20"
        android:visibility="gone"
        >
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:drawableLeft="@mipmap/tag"
             android:text="Choose Category For Income"
             android:textSize="@dimen/fontsize_15"
             android:id="@+id/txt_incomeHead"
             android:shadowDy="5"
             android:shadowDx="5"
             android:shadowColor="@color/colorPrimaryDark"
             android:shadowRadius="10"
             android:layout_alignParentTop="true"
             />
        <EditText
            android:id="@+id/searchCategoryIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_incomeHead"
            android:layout_alignParentLeft="true"
            android:hint="Search your category name"
            android:textColor="@color/colorPrimary"
            android:layout_margin="@dimen/size_3"
            android:drawableLeft="@mipmap/search"
            android:drawablePadding="@dimen/size_6"
            />
        <!--NO CATEGORIES FOUND FOR THE SEARCH MESSAGE-->
        <TextView
            android:id="@+id/txtErrNocatgIncome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/searchCategoryIncome"
            android:padding="@dimen/size_25"
            android:text="No categories found for your search. Please, add your own categories."
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic"
            android:gravity="center"
            android:visibility="invisible"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/incomeVisibleCategoryLayout"
            android:layout_below="@+id/searchCategoryIncome"
            >
         <TextView
            android:id="@+id/catgI1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:drawableTop="@drawable/catg_salary"
            android:padding="@dimen/size_8"
            android:gravity="center"
            android:textColor="@color/Black"
            android:layout_margin="@dimen/size_3"
            android:textStyle="italic"
            android:background="@drawable/category_gradient_border"
            android:text="@string/catg_salary"
            />
        <TextView
            android:id="@+id/catgI2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/catgI1"
            android:drawableTop="@drawable/catg_homerent"
            android:padding="@dimen/size_8"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textStyle="italic"
            android:layout_margin="@dimen/size_3"
            android:background="@drawable/category_gradient_border"
            android:text="@string/catg_homerent"
            />
         <TextView
             android:id="@+id/catgI3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_toRightOf="@+id/catgI2"
             android:layout_toLeftOf="@+id/catgI4"
             android:drawableTop="@drawable/catg_salary"
             android:padding="@dimen/size_8"
             android:gravity="center"
             android:layout_margin="@dimen/size_3"
             android:textColor="@color/Black"
             android:textStyle="italic"
             android:background="@drawable/category_gradient_border"
             android:text="@string/catg_salary"
             />
         <TextView
             android:id="@+id/catgI4"
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:drawableTop="@drawable/catg_salary"
             android:padding="@dimen/size_8"
             android:gravity="center"
             android:layout_margin="@dimen/size_3"
             android:textColor="@color/Black"
             android:textStyle="italic"
             android:background="@drawable/category_gradient_border"
             android:text="@string/catg_salary"
             />

        <!--SECOND CATGEORY ROW-->
        <TextView
            android:id="@+id/catgI5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/catgI1"
            android:layout_alignParentLeft="true"
            android:drawableTop="@drawable/catg_salary"
            android:padding="@dimen/size_8"
            android:textColor="@color/Black"
            android:layout_margin="@dimen/size_3"
            android:textStyle="italic"
            android:gravity="center"
            android:background="@drawable/category_gradient_border"
            android:text="@string/catg_salary"
            />
        <TextView
            android:id="@+id/catgI6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/catgI1"
            android:layout_toRightOf="@+id/catgI5"
            android:drawableTop="@drawable/catg_homerent"
            android:padding="@dimen/size_8"
            android:textColor="@color/Black"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_margin="@dimen/size_3"
            android:background="@drawable/category_gradient_border"
            android:text="@string/catg_homerent"
            />
        <TextView
            android:id="@+id/catgI7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/catgI1"
            android:layout_toRightOf="@+id/catgI6"
            android:layout_toLeftOf="@+id/catgI8"
            android:drawableTop="@drawable/catg_salary"
            android:padding="@dimen/size_8"
            android:layout_margin="@dimen/size_3"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textStyle="italic"
            android:background="@drawable/category_gradient_border"
            android:text="@string/catg_salary"
            />
        <TextView
            android:id="@+id/catgI8"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/catgI1"
            android:drawableTop="@drawable/catg_salary"
            android:padding="@dimen/size_8"
            android:layout_margin="@dimen/size_3"
            android:textColor="@color/Black"
            android:textStyle="italic"
            android:gravity="center"
            android:background="@drawable/category_gradient_border"
            android:text="@string/catg_salary"
            /></RelativeLayout>

        <TextView
            android:id="@+id/catgIMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/incomeVisibleCategoryLayout"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@mipmap/catg_more"
            android:drawablePadding="@dimen/size_6"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_25"
            android:padding="@dimen/size_8"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/category_gradient_border_primary"
            android:text="More..."
            />
        <TextView
            android:id="@+id/catgIAdd"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/incomeVisibleCategoryLayout"
            android:layout_toRightOf="@+id/catgIMore"
            android:drawableLeft="@drawable/catg_custom"
            android:drawablePadding="@dimen/size_6"
            android:padding="@dimen/size_8"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_25"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/category_gradient_border_primary"
            android:text="Add Category"
            />
    </RelativeLayout>


    <!--EXPENSE CATEGORY TABLE-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tableCategoryExpense"
        android:layout_below="@+id/spnTypeOfPayment"
        android:background="@drawable/gradient_edittext_border"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_10"
        android:paddingLeft="@dimen/size_8"
        android:paddingRight="@dimen/size_8"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginBottom="@dimen/size_8"
        android:layout_marginLeft="@dimen/fontsize_20"
        android:layout_marginRight="@dimen/fontsize_20"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/tag"
            android:text="Choose Category For Expense"
            android:textSize="@dimen/fontsize_15"
            android:id="@+id/txt_expenseHead"
            android:shadowDy="5"
            android:shadowDx="5"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowRadius="10"
            android:layout_alignParentTop="true"
            />
        <EditText
            android:id="@+id/searchCategoryExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_expenseHead"
            android:maxLength="10"
            android:hint="Search your category name"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/size_3"
            android:drawableLeft="@mipmap/search"
            android:drawablePadding="@dimen/size_6"
            />

        <!--NO CATEGORIES FOUND FOR THE SEARCH MESSAGE-->
        <TextView
            android:id="@+id/txtErrNocatg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/searchCategoryExpense"
            android:padding="@dimen/size_25"
            android:text="No categories found for your search. Please, add your own categories."
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic"
            android:gravity="center"
            android:visibility="invisible"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expenseVisibleCategoryLayout"
            android:layout_below="@+id/searchCategoryExpense"
            >
        <!--FIRST CATGEORY ROW-->
        <TextView
            android:id="@+id/catgE1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
            android:padding="@dimen/size_8"
            android:visibility="visible"
            android:textColor="@color/Black"
            android:layout_margin="@dimen/size_3"
            android:textStyle="italic"
            android:gravity="center"
            android:background="@drawable/category_gradient_border"
            />
        <TextView
            android:id="@+id/catgE2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/catgE1"
            android:padding="@dimen/size_8"
            android:visibility="visible"
            android:textColor="@color/Black"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_margin="@dimen/size_3"
            android:background="@drawable/category_gradient_border"
            />
        <TextView
            android:id="@+id/catgE3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/catgE2"
            android:layout_toLeftOf="@+id/catgE4"
            android:padding="@dimen/size_8"
            android:visibility="visible"
            android:layout_margin="@dimen/size_3"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textStyle="italic"
            android:background="@drawable/category_gradient_border"
            />
        <TextView
            android:id="@+id/catgE4"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_8"
            android:layout_margin="@dimen/size_3"
            android:visibility="visible"
            android:textColor="@color/Black"
            android:textStyle="italic"
            android:gravity="center"
            android:background="@drawable/category_gradient_border"
            />

        <!--SECOND CATGEORY ROW-->
        <TextView
            android:id="@+id/catgE5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/catgE4"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/size_8"
            android:visibility="visible"
            android:textColor="@color/Black"
            android:layout_margin="@dimen/size_3"
            android:textStyle="italic"
            android:gravity="center"
            android:background="@drawable/category_gradient_border"
            />
        <TextView
            android:id="@+id/catgE6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/catgE4"
            android:layout_toRightOf="@+id/catgE5"
            android:visibility="visible"
            android:padding="@dimen/size_8"
            android:textColor="@color/Black"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_margin="@dimen/size_3"
            android:background="@drawable/category_gradient_border"
            />
        <TextView
            android:id="@+id/catgE7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/catgE4"
            android:layout_toRightOf="@+id/catgE6"
            android:layout_toLeftOf="@+id/catgE8"
            android:padding="@dimen/size_8"
            android:layout_margin="@dimen/size_3"
            android:gravity="center"
            android:visibility="visible"
            android:textColor="@color/Black"
            android:textStyle="italic"
            android:background="@drawable/category_gradient_border"
            />
        <TextView
            android:id="@+id/catgE8"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/catgE4"
            android:padding="@dimen/size_8"
            android:visibility="visible"
            android:layout_margin="@dimen/size_3"
            android:textColor="@color/Black"
            android:textStyle="italic"
            android:gravity="center"
            android:background="@drawable/category_gradient_border"
            /></RelativeLayout>
        <TextView
            android:id="@+id/catgEMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expenseVisibleCategoryLayout"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@mipmap/catg_more"
            android:drawablePadding="@dimen/size_6"
            android:layout_marginLeft="@dimen/size_25"
            android:layout_marginTop="@dimen/size_10"
            android:padding="@dimen/size_8"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/category_gradient_border_primary"
            android:text="More..."
            />

        <TextView
            android:id="@+id/catgEAdd"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expenseVisibleCategoryLayout"
            android:layout_toRightOf="@+id/catgEMore"
            android:drawableLeft="@drawable/catg_custom"
            android:drawablePadding="@dimen/size_6"
            android:padding="@dimen/size_8"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_25"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/category_gradient_border_primary"
            android:text="Add Category"
            />
    </RelativeLayout>

</RelativeLayout>
</ScrollView>