<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relative1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_edittext_border"
        android:layout_margin="@dimen/size_8"
        android:padding="2dp"
        >

    <TextView
        android:id="@+id/txt_remainderHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remainderAlertHead"
        android:layout_marginTop="@dimen/size_6"
        android:textSize="@dimen/fontsize_15"
        android:textStyle="bold"
        android:shadowDy="5"
        android:shadowDx="5"
         android:gravity="center"
        android:background="@color/White"
        android:shadowColor="@color/colorPrimaryDark"
        android:shadowRadius="10"
        android:layout_alignParentTop="true"
        />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_below="@+id/txt_remainderHeading"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mainRemainderLayout"
                android:paddingBottom="@dimen/size_8"
                android:paddingLeft="@dimen/size_3"
                android:paddingRight="@dimen/size_3"
                android:layout_margin="@dimen/size_3"
                >
        <TextView
            android:id="@+id/txt_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_3"
            android:text="Select the type of alert and see your expense details of the selected period, notified at your selected time : - "
            android:textSize="@dimen/fontsize_14"
            android:textStyle="italic"
            android:layout_alignParentTop="true"
            />

        <RelativeLayout
            android:id="@+id/alertSelectLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_label"
            android:layout_marginTop="@dimen/size_8"
            >
            <!--FIRST CATGEORY ROW-->
            <TextView
                android:id="@+id/alertType1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily\nAlert"
                android:layout_alignParentLeft="true"
                android:drawableTop="@drawable/daily_alert"
                android:padding="@dimen/size_8"
                android:textColor="@color/Black"
                android:layout_margin="@dimen/size_3"
                android:tag="dayalert"
                android:textStyle="italic"
                android:gravity="center"
                android:background="@drawable/category_gradient_border"
                />
            <TextView
                android:id="@+id/alertType2"
                android:text="Weekly\nAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/weekly_alert"
                android:layout_toRightOf="@+id/alertType1"
                android:padding="@dimen/size_8"
                android:textColor="@color/Black"
                android:textStyle="italic"
                android:gravity="center"
                android:layout_margin="@dimen/size_3"
                android:background="@drawable/category_gradient_border"
                />
            <TextView
                android:id="@+id/alertType3"
                android:text="Monthly\nAlert"
                android:drawableTop="@drawable/monthly_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/alertType2"
                android:layout_toLeftOf="@+id/noAlert"
                android:padding="@dimen/size_8"
                android:layout_margin="@dimen/size_3"
                android:gravity="center"
                android:textColor="@color/Black"
                android:textStyle="italic"
                android:background="@drawable/category_gradient_border"
                />
            <TextView
                android:id="@+id/noAlert"
                android:text="No\nAlert"
                android:drawableTop="@drawable/catg_delete"
                 android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_8"
                android:layout_margin="@dimen/size_3"
                android:textColor="@color/Black"
                android:textStyle="italic"
                android:gravity="center"
                android:background="@drawable/category_gradient_border"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/timepickAlertLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alertSelectLayout"
            android:layout_marginTop="@dimen/size_8"
            android:padding="@dimen/size_3"
            android:background="@drawable/category_gradient_border"
            >
        <Spinner
            android:id="@+id/selectPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            ></Spinner>
        <TimePicker
            android:id="@+id/selectTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selectPeriod"
            android:background="@color/colorAccent"
            android:paddingBottom="@dimen/size_6"
            >

        </TimePicker>
        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveRemainder"
            android:layout_below="@+id/timepickAlertLayout"
            android:text="Save remainder"
            android:textColor="@color/LightGrey"
            android:background="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_8"
            android:paddingLeft="@dimen/size_25"
            android:paddingRight="@dimen/size_25"
            />
    </RelativeLayout>
    </ScrollView></RelativeLayout>
</RelativeLayout>